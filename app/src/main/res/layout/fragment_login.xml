<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollViewLogin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="240dp"
            android:layout_height="120dp"
            android:layout_marginTop="80dp"
            android:src="@drawable/mercy_logo" />

        <EditText
            android:id="@+id/EditTextUsername"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/left_side_color_black"
            android:drawableLeft="@drawable/ic_perm_identity_white_18dp"
            android:drawablePadding="28dp"
            android:hint="Username"
            android:inputType="textFilter"
            android:maxLength="20"
            android:paddingBottom="12dp"
            android:paddingLeft="16dp"
            android:paddingRight="12dp"
            android:paddingTop="12dp"
            android:textCursorDrawable="@drawable/cursor_color" />

        <EditText
            android:id="@+id/EditTextPassword"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@drawable/left_side_color_black"
            android:drawableLeft="@drawable/ic_lock_white_18dp"
            android:drawablePadding="28dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingBottom="12dp"
            android:paddingLeft="16dp"
            android:paddingRight="12dp"
            android:paddingTop="12dp"
            android:textCursorDrawable="@drawable/cursor_color" />

        <TextView
            android:id="@+id/TextViewRegister"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="Not register yet? (Register Now)"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />

        <Button
            android:id="@+id/ButtonLogin"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:textColor="@drawable/text_color_button"
            android:background="@drawable/rounded_button"
            android:text="Login" />
    </LinearLayout>
</ScrollView>
